{
  "functions": {
    "itinerary_planning": {
      "purpose": "Create complete trip itinerary with locations, timing, and routes",
      "params": {
        "start_location": "string - Starting point",
        "categories": "list - Place categories (e.g., ['restaurant', 'museum'])",
        "destinations": "list - Specific destinations to include",
        "duration_days": "int - Number of days",
        "preferences": "list - User preferences"
      },
      "returns": "dict - Complete itinerary with path, timeline, distances",
      "example": "itinerary_planning('HCMUS', categories=['museum', 'cafe'], duration_days=1)"
    },
  
  
    "suggest_categories": {
      "purpose": "Suggest place categories based on user context and preferences",
      "params": {
        "history": "list - Conversation history",
        "preferences": "list - User preferences"
      },
      "returns": "list - Recommended categories",
      "example": "suggest_categories(history, preferences=['educational'])"
    },
    
    "suggest_attractions": {
      "purpose": "Suggest attractions of given category",
      "params": {
        "category": "string - Category of attractions",
        "location": "string - Reference location",
        "preferences": "list - User preferences",
        "limit": "int - Max results"
      },
      "returns": "list - Recommended attractions",
      "example": "suggest_attractions('museum', location='District 1', limit=5)"
    },
    
    "get_attraction_details": {
      "purpose": "Display attraction details (image, description, hours, price)",
      "params": {
        "attraction_id": "int - Database ID of attraction",
        "attraction_name": "string - Name of attraction"
      },
      "returns": "dict - Attraction details with image, description, hours, ticket price",
      "example": "get_attraction_details(attraction_id=123)"
    },
    
    "ask_clarify": {
      "purpose": "Ask for clarification when information is missing or ambiguous",
      "params": {
        "history": "list - Conversation history",
        "clarify_text": "string - Clarification question"
      },
      "returns": "dict - Response with clarification question",
      "example": "ask_clarify(history, 'What type of places are you interested in?')"
    },
    
    "confirm_start_location": {
      "purpose": "Confirm or ask for the starting location of the journey",
      "params": {
        "history": "list - Conversation history",
        "location": "string - Proposed starting location"
      },
      "returns": "dict - Confirmation or request for start location",
      "example": "confirm_start_location(history, 'Landmark 81')"
    },
    
    "confirm_destination": {
      "purpose": "Confirm or ask for destination preferences",
      "params": {
        "history": "list - Conversation history",
        "destination": "string - Proposed destination"
      },
      "returns": "dict - Confirmation or request for destination",
      "example": "confirm_destination(history, 'Ben Thanh Market')"
    }
  },
  
  "intent_to_function_mapping": {
    "ask_clarify": "ask_clarify",
    "greeting": "greet",
    "farewell": "farewell",
    "suggest_itinerary": "itinerary_planning",
    "create_itinerary": "itinerary_planning",
    "get_attractions": "suggest_attractions",
    "search_attractions": "suggest_attractions",
    "suggest_attractions": "suggest_attractions",
    "suggest_categories": "suggest_categories",
    "get_attraction_details": "get_attraction_details",
    "display_attraction": "get_attraction_details",
    "confirm_location": "confirm_start_location",
    "confirm_start_location": "confirm_start_location",
    "confirm_destination": "confirm_destination"
  }
}
